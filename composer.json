{
    "name": "efabrica/phpstan-latte",
    "license": ["MIT"],
    "keywords": [
        "static analysis"
    ],
    "require": {
        "php": ">=8.4",
        "ext-json": "*",
        "phpstan/phpstan": "^1.12.13",
        "phpstan/phpstan-nette": "^1.2.6",
        "latte/latte": "^2.11.6 | ^3.0.4",
        "nette/utils": "^3.2|^4.0",
        "nette/finder": "^2.5|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "nette/application": "^3.2",
        "nette/forms": "^3.2",
        "nikic/php-parser": "^4.19",
        "efabrica/coding-standard": "^0.7",
        "phpstan/phpstan-strict-rules": "^1.4",
        "spaze/phpstan-disallowed-calls": "^2.11 | ^3.0"
    },
    "extra": {
        "phpstan": {
            "includes": [
                "rules.neon"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Efabrica\\PHPStanLatte\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Efabrica\\PHPStanLatte\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
